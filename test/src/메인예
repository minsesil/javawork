package exSnack12;

import java.util.Scanner;

public class SnackTest {

	public static void main(String[] args) {

	//Snack 객체생성
		Snack s1 = new Snack();
		Snack s2 = new Snack("비스켓", "새우깡", "매운새우맛", 1, 2000);
		
		Scanner sc = new Scanner(System.in);
				
		System.out.print("종류입력:");
		s1.setKind(sc.next());
		
		System.out.print("이름입력:");
		s1.setName(sc.next());
		
		System.out.print("맛입력:");
		s1.setFlavor(sc.next());
		
		System.out.print("갯수입력:");
		s1.setNumof(sc.nextInt());
		
		System.out.print("가격입력:");
		s1.setPrice(sc.nextInt());
		
		System.out.println("s1객체 정보 : " + s1.information());		//s1객체정보
		System.out.println("s2객체 정보: " + s2.information());		//s2객체정보

		//s1 객체의수량을 3개로 변경
		//s1 객체의 금액변경
		//s1 객체 정보출력
		
		//s2 객체 이름변경
		//s2 객체의 금액변경
		//s2 객체 정보출력
		
}
}